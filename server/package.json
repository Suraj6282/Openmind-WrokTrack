{
  "name": "openmind-worktrack-server",
  "version": "1.0.0",
  "description": "Enterprise Grade MERN Stack Attendance + Leave + Payroll + Digital Signature System",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "prod": "NODE_ENV=production node src/index.js",
    "seed": "node src/seeders/init.js",
    "seed:dev": "NODE_ENV=development node src/seeders/init.js",
    "seed:prod": "NODE_ENV=production node src/seeders/init.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "db:backup": "node src/scripts/backup.js",
    "db:restore": "node src/scripts/restore.js",
    "db:migrate": "node src/scripts/migrate.js",
    "cron:payroll": "node src/cron/payroll.js",
    "cron:attendance": "node src/cron/attendance.js",
    "cron:cleanup": "node src/cron/cleanup.js",
    "logs:clear": "rm -rf logs/*.log",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:stop": "pm2 stop ecosystem.config.js",
    "pm2:restart": "pm2 restart ecosystem.config.js",
    "pm2:logs": "pm2 logs",
    "pm2:monit": "pm2 monit",
    "docker:build": "docker build -t openmind-worktrack-server .",
    "docker:run": "docker run -p 5000:5000 openmind-worktrack-server",
    "docker:compose": "docker-compose up -d"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "axios": "^1.6.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.20.2",
    "bull": "^4.11.5",
    "compression": "^1.7.4",
    "connect-mongo": "^5.1.0",
    "connect-redis": "^7.1.0",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.10.0",
    "express-session": "^1.17.3",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.43",
    "mongoose": "^7.5.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.5",
    "passport": "^0.6.0",
    "passport-google-oauth20": "^2.0.0",
    "passport-jwt": "^4.0.1",
    "pdfkit": "^0.14.0",
    "rate-limit-redis": "^3.0.2",
    "sharp": "^0.32.5",
    "socket.io": "^4.7.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "xss": "^1.0.14"
  },
  "devDependencies": {
    "eslint": "^8.49.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.28.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "attendance",
    "payroll",
    "leave-management",
    "digital-signature",
    "mern",
    "pwa",
    "enterprise",
    "hrms"
  ],
  "author": "OpenMind Technologies",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/openmind/openmind-worktrack-server.git"
  },
  "bugs": {
    "url": "https://github.com/openmind/openmind-worktrack-server/issues"
  },
  "homepage": "https://github.com/openmind/openmind-worktrack-server#readme",
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "js,json",
    "ignore": [
      "src/**/*.test.js"
    ],
    "exec": "node src/index.js"
  }
}